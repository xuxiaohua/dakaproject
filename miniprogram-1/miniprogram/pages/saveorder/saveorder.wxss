}

.weui-tabbar {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 58px;
  background-color: white;
}

.weui-tabbar .weui-flex {
  flex: 1;
}

.mgr10 {
  margin-top: 10px;
}

.weui-btn_mini {
  font-size: 14px;
  font-weight: 400;
