.page {
  background-color: #f2f2f2;
  margin-top: 10px;
  min-height: 90vh;
}

.weui-article__p {
  color: #666666;
  font-size: 14px;
  padding-top: 8px;
}

.weui-article__h3 {
  font-size: 16px;

}

.weui-cells:before {
  border-top: none;
}

.weui-cell:before {
  border-top: none;
}

.weui-cell {
  padding: 1px;
}

.weui-flex__item {
  font-size: 14px;

}

.weui-input {
  font-size: 14px;
}

.input-placeholder {
  color: #999999;
  font-size: 28rpx;
}

.weui-label {
  width: 63px;
  font-size: 14px;
  color: #333333;
}

.weui-tabbar {
  position: fixed;
  bottom: 0;
  width: 100%
}

.weui-article__section {
  padding-left: 20rpx;
