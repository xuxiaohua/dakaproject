  height: 58px;
  font-size: 16px;
}

.weui-tabbar:before {
  border-top: none;
}

.weui-toast {
  background-color: #000000;
  opacity: 0.5;
  width: 132px;
  height: 40px;
  line-height: 40px;
}

.weui-toast__content {
  color: #FFFFFF;
}
.picker{
  padding: 13px;
