  padding-right: 20rpx;
}

.danjia_yh {
  color: #FD4027
}

.shop_details {
  background-color: white;
  padding: 10px;
  margin: 10px;
  border-radius: 5px;

}

.activey_img {
  flex-basis: 20%;
}

.priceTotal {
  height: 39px;
  background-color: white;
  line-height: 39px;
